<main class="container mx-auto text-center h-screen flex flex-col">
    <h1 class="text-7xl pt-6">Мои соцсети</h1>
    <ul class="pt-6 space-y-6 flex flex-col grow justify-evenly h-full">
        {% for x in links %}
        <li>
            <a href="{{x.url}}"
                class="
                    text-blue-600 
                    underline
                    text-5xl
                    rounded-md
                    px-2
                    pb-2
                    focus-visible:ring-4
                    outline-none
                    active:text-blue-800 
                    hover:bg-blue-100 
                    transition-colors
                    duration-200">{{x.title}}</a>
        </li>
        {% endfor %}
    </ul>
</main>